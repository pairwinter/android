<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layout_component">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dip</item>
        <!--<item name="android:background">@drawable/style_corners</item>-->
        <item name="android:radius">5dip</item>
    </style>
    <style name="layout_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">2dip</item>
    </style>
    <style name="layout_linear_content">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dip</item>
        <!--<item name="android:background">@color/darksalmon</item>-->
    </style>
    <style name="layout_grid_textview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@color/blue</item>
        <item name="android:layout_gravity">fill_horizontal</item>
    </style>
</resources>